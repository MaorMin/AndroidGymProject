<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical"
        android:background="@drawable/register_top"
        android:gravity="bottom">

        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:layout_marginBottom="7dp"
            android:src="@drawable/logo_transperent_bg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reg_text"
            android:textSize="20dp"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:gravity="center"
        android:orientation="vertical">


        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxCornerRadiusTopEnd="20dp"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxCornerRadiusBottomStart="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:boxCornerRadiusTopStart="20dp"
            app:counterMaxLength="20"
            app:counterEnabled="true"
            app:counterOverflowTextAppearance="@color/CounterOver"
            android:hint="@string/first_name"
            app:errorEnabled="true"
            app:errorTextAppearance="@string/new_member"


            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:drawableEnd="@drawable/ic_person_outline_black_18dp"
                android:drawableRight="@drawable/ic_person_outline_black_18dp"
                android:inputType="textPersonName"
                android:id="@+id/first_name_register"


                />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxStrokeColor="#696969"
            app:boxCornerRadiusTopEnd="20dp"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxCornerRadiusBottomStart="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:boxCornerRadiusTopStart="20dp"
            app:counterMaxLength="20"
            app:counterEnabled="true"
            app:counterOverflowTextAppearance="@color/com_facebook_messenger_blue"
            android:hint="@string/last_name"
            app:errorEnabled="true"
            app:errorTextAppearance="@string/new_member"

            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:drawableEnd="@drawable/ic_person_outline_black_18dp"
                android:drawableRight="@drawable/ic_person_outline_black_18dp"
                android:inputType="textPersonName"
                android:id="@+id/last_name_register"

                />
        </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:boxStrokeColor="#696969"
            app:boxCornerRadiusTopEnd="20dp"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxCornerRadiusBottomStart="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:boxCornerRadiusTopStart="20dp"
            app:counterMaxLength="20"
            app:counterEnabled="true"
            app:counterOverflowTextAppearance="@color/com_facebook_messenger_blue"
            android:hint="@string/mail_txt"
            app:errorEnabled="true"
            app:errorTextAppearance="@string/new_member"

            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:drawableEnd="@drawable/ic_mail_outline_black_18dp"
                android:drawableRight="@drawable/ic_mail_outline_black_18dp"
                android:inputType="textEmailAddress"
                android:id="@+id/email_register"
                />
        </com.google.android.material.textfield.TextInputLayout>




        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:boxStrokeColor="#696969"
            app:boxCornerRadiusTopEnd="20dp"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxCornerRadiusBottomStart="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:boxCornerRadiusTopStart="20dp"
            app:counterMaxLength="20"
            app:counterEnabled="true"
            app:counterOverflowTextAppearance="@color/CounterOver"
            android:hint="@string/pas_txt"
            app:errorEnabled="true"
            app:errorTextAppearance="@string/new_member"

            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:drawableEnd="@drawable/ic_lock_outline_black_24dp"
                android:drawableRight="@drawable/ic_lock_outline_black_24dp"
                android:inputType="textPassword"
                android:id="@+id/pass_register"
                />
        </com.google.android.material.textfield.TextInputLayout>





        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:boxStrokeColor="#696969"
            app:boxCornerRadiusTopEnd="20dp"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxCornerRadiusBottomStart="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:boxCornerRadiusTopStart="20dp"
            app:counterMaxLength="20"
            app:counterEnabled="true"
            app:counterOverflowTextAppearance="@color/com_facebook_messenger_blue"
            android:hint="@string/repeat_pass"
            app:errorEnabled="true"
            app:errorTextAppearance="@string/new_member"
                      >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:drawableEnd="@drawable/ic_lock_outline_black_24dp"
                android:drawableRight="@drawable/ic_lock_outline_black_24dp"
                android:inputType="textPassword"
                android:id="@+id/rep_pass_register"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <ProgressBar
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/progress_bar_reg_btn"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:gravity="bottom">

        <Button
            android:id="@+id/reg_btn_end"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/shape_selector"
            android:text="@string/reg_btn"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/member_text"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:textColor="@color/colorPrimaryDark"
                android:text="@string/click_here_btn"
                android:textAllCaps="false"
                android:id="@+id/clickHereDetails_btn"
                />

        </LinearLayout>

    </LinearLayout>



</LinearLayout>